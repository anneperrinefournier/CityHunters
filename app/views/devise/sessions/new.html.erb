<div class="container">
  <h2 class="mt-3">Connexion</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  label: "E-mail",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "mot-de-passe-actuel" } %>
      <%= f.input :remember_me, label: "Se souvenir de mon mot de passe", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Se connecter", class:"btn-home" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
