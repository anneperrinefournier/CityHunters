<div id="myModal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Answer</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" data-action="click->answer-modal#closeModal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for :question, url: "#", html: { data: { answer_modal_target: "form", action: "submit->answer-modal#verifyAnswer" } } do |f| %>
          <%= f.input :answer %>
          <%= f.submit "Submit your answer" %>
        <% end %>

        <div class="d-none" data-answer-modal-target="response">
          <%= riddle.solution %>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" data-action="click->answer-modal#closeModal">Close</button>
      </div>
    </div>
  </div>
</div>
