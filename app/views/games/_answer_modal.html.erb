<div id="myModal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= riddle.question %></h5>
      </div>
      <div class="modal-body">
        <%= simple_form_for :question, url: "#", html: { data: { answer_modal_target: "form", action: "submit->answer-modal#verifyAnswer" } } do |f| %>
          <%= f.input :answer, label: "Ta réponse :", required: false %>
          <%= f.submit "Envoyer ma réponse", class: "btn-home" %>
        <% end %>
        <div class="d-none" data-answer-modal-target="response">
          <%= riddle.solution %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn-ugly" data-dismiss="modal" data-action="click->answer-modal#closeModal">Retour</button>
      </div>
    </div>
  </div>
</div>
