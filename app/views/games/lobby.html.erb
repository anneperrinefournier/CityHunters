<div class="container" data-controller="lobby" data-lobby-id-value="<%= @game.id %>" data-lobby-participation-id-value="<%= current_user.find_participation_for(@game).id %>">
  <h1 class="mt-3 text-center lobby-title"><%= @storyline_title %></h1>
  <div class="lobby-qrcode"></div>
  <h2 class="mt-5 text-center lobby-pin">PIN: <%= @game.pin %></h2>

  <div class="mt-5 lobby-players-list" data-lobby-target="players">
    <%= render(partial: "player", locals: { users: @users }) %>
  </div>

  <% if current_user == @game.user %>
    <div class="mt-3 d-flex justify-content-center">
      <%= link_to "Let's go", start_game_path(@game), data: { turbo_method: :patch } %>
    </div>
  <% else %>
    <div class="mt-3 d-flex justify-content-center">
      <p>Witing for host to lunch the game</p>
    </div>
  <% end %>

</div>
