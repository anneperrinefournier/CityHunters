<div class="container" data-controller="lobby" data-lobby-id-value="<%= @game.id %>" data-lobby-participation-id-value="<%= current_user.find_participation_for(@game).id %>">
  <h1 class="mt-3 text-center lobby-title"><%= @storyline_title %></h1>
  <div class="lobby-qrcode"></div>
  <h2 class="mt-5 text-center lobby-pin">PIN: <%= @game.pin %></h2>

  <div class="mt-5">
    <% @users.each do |user| %>
      <div class="lobby-players mt-2">
        <div class="d-flex">
          <% if user.photo.attached? %>
            <%= cl_image_tag(user.photo.key) %>
          <% else %>
            <img src="https://cdn2.iconfinder.com/data/icons/instagram-outline/19/11-1024.png" alt="user-picture" class="avatar">
          <% end %>
          <p class="lobby-player-name"><%= user.name %></p>
        </div>
        <div class="d-flex align-items-end">
          <a href="#" class="delete-player-btn">delete</a>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-3 d-flex justify-content-center">
    <form action="/games/<%= @game.id %>/">
      <button type="submit" class="btn btn-primary">Lancer la partie</button>
    </form>
  </div>
</div>
