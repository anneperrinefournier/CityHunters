        <p class="lobby-player-name">Joey</p>
      </div>
      <div class="d-flex align-items-end">
        <a href="#" class="delete-player-btn">delete</a>
      </div>
      <%#= cl_image_tag(@user.) %>
      <%#= user.name %>
    </div>
  </div>

  <div class="mt-3 d-flex justify-content-center">
    <form action="/games/<%= @game.id %>/">
