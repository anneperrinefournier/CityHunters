<div class="container" data-controller="game" data-game-id-value="<%= @game.id %>">
  <%= render 'game_state', game: @game %>

  <div class='d-flex justify-content-center d-none' data-game-target="displayAnswerBtn" data-controller="answer-modal">
    <button class="btn btn-primary" data-action="click->answer-modal#openModal">RÃ©pondre</button>
      <%= render "answer_modal", riddle: @game.current_place.current_riddle(@game), game: @game %>
      <div data-answer-modal-target="displayriddle"></div>
  </div>

  <div class="mt-3 mb-3 story-introduction" data-game-target="introduction">
    <h1>Introduction</h1>
    <%= cl_image_tag @storyline.photo.key, alt: (@storyline.title + "-picture"), id: "storyline-picture-intro", class: "storyline-picture-card" %>
    <p><%= @storyline.introduction %></p>
    <div class="d-flex justify-content-center">
      <button class="btn btn-primary" data-action="click->game#closeIntroduction">C'est parti!</button>
    </div>
  </div>

  <div class="map-position">
  <%= render 'map' %>
  </div>
</div>
