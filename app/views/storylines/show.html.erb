<div class="container py-5">
  <div class="m-3 show-card-product">
    <div class="row justify-content-between align-items-center">
      <div class="col-auto">
        <a href="<%= storylines_path %>">
          <%= image_tag asset_path('back_arrow.svg'), alt: 'home' %>
        </a>
      </div>
      <div class="col-auto text-center">
        <h3><%= @storyline.title %></h3>
      </div>
      <div class="col-auto"></div>
  </div>
    <div class="text-center">
      <% if @storyline.photo.attached? %>
        <%= cl_image_tag(@storyline.photo.key, alt: "#{@storyline.title} -picture", class: "rounded-square") %>
      <% else %>
        <%= image_tag("https://cdn.pixabay.com/photo/2019/10/13/12/35/paris-4546007_1280.jpg", alt: "Image", class: "rounded-square") %>
      <% end %>
    </div>
    <div class="text-left">
      <p><%= @storyline.long_description %></p>
    </div>
    <hr class="dotted-line">
    <div class="d-flex justify-content-between">
      <div class="text-right">
        <strong>Où?</strong> <%= @storyline.district %>
      </div>
    </div>
    <hr class="dotted-line">
    <div class="d-flex justify-content-between">
      <div class="text-right">
        <strong>Durée:</strong> <%= @storyline.duration.to_i %> min
      </div>
      <div><strong>Difficulté:</strong> <% @storyline.difficulty.times do %>
        <i class="star-rating fa-regular fa-star"></i>
        <% end %>
      </div>
    </div>
    <hr class="dotted-line">
    <div class="d-flex justify-content-between">
      <div class="text-right">
        <strong>Thème:</strong> <%= @storyline.theme %>
      </div>
    </div>
    <form class="text-center" action="/storylines/<%=@storyline.id%>/games" method="POST">
      <button class=" btn btn-primary"><strong>Créer la partie</strong></button>
    </form>
  </div>
</div>
